{
    "name": "vite-project",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "postinstall": "shx cp -n .env.example .env",
        "dev": "concurrently -c green,blue yarn:dev:web yarn:dev:server",
        "dev:web": "wait-on tcp:4000 && NODE_ENV=development vite",
        "dev:server": "nodemon",
        "prebuild": "yarn clean",
        "build": "yarn build:web && yarn build:server",
        "build:web": "vite build",
        "build:server": "esbuild ./server --platform=node --target=node16 --format=cjs --outdir=server-dist",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "clean": "shx rm -rf dist server-dist",
        "lint": "eslint ."
    },
    "dependencies": {
        "@fastify/compress": "6.1.1",
        "@fastify/static": "6.5.0",
        "dotenv": "16.0.2",
        "fastify": "4.5.3"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "13.4.0",
        "@testing-library/user-event": "14.4.3",
        "@types/jest": "28.1.7",
        "@types/node": "16",
        "@types/react": "18.0.18",
        "@types/react-dom": "18.0.6",
        "@typescript-eslint/eslint-plugin": "5.36.1",
        "@typescript-eslint/parser": "5.36.1",
        "@vitejs/plugin-react": "2.1.0",
        "concurrently": "7.3.0",
        "esbuild": "0.15.7",
        "eslint": "8.23.0",
        "eslint-plugin-react": "7.31.6",
        "jest": "28.1.3",
        "jest-environment-jsdom": "28.1.3",
        "nodemon": "2.0.19",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "shx": "0.3.4",
        "ts-jest": "28.0.8",
        "ts-node": "10.9.1",
        "typescript": "4.8.2",
        "vite": "3.1.0",
        "wait-on": "6.0.1"
    },
    "nodemonConfig": {
        "watch": "server",
        "ext": "ts",
        "exec": "esbuild ./server --platform=node --target=node16 --bundle | node"
    }
}
