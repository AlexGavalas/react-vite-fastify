{
    "name": "vite-project",
    "version": "0.0.0",
    "private": true,
    "engines": {
        "node": "18"
    },
    "scripts": {
        "postinstall": "shx cp -n .env.example .env",
        "dev": "concurrently -c green,blue yarn:dev:web yarn:dev:server",
        "dev:web": "wait-on tcp:4000 && NODE_ENV=development vite",
        "dev:server": "nodemon",
        "prebuild": "yarn clean",
        "build": "yarn build:web && yarn build:server",
        "build:web": "vite build",
        "build:server": "esbuild ./server --platform=node --target=node18 --format=cjs --outdir=server-dist",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "clean": "shx rm -rf dist server-dist",
        "lint": "eslint ."
    },
    "dependencies": {
        "@fastify/compress": "6.2.0",
        "@fastify/static": "6.6.0",
        "dotenv": "16.0.3",
        "fastify": "4.10.2"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "13.4.0",
        "@testing-library/user-event": "14.4.3",
        "@types/jest": "29.2.4",
        "@types/node": "18.11.13",
        "@types/react": "18.0.26",
        "@types/react-dom": "18.0.9",
        "@typescript-eslint/eslint-plugin": "5.46.0",
        "@typescript-eslint/parser": "5.46.0",
        "@vitejs/plugin-react-swc": "3.0.0",
        "concurrently": "7.6.0",
        "esbuild": "0.16.4",
        "eslint": "8.29.0",
        "eslint-plugin-react": "7.31.11",
        "jest": "29.3.1",
        "jest-environment-jsdom": "29.3.1",
        "nodemon": "2.0.20",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "shx": "0.3.4",
        "ts-jest": "29.0.3",
        "ts-node": "10.9.1",
        "typescript": "4.9.4",
        "vite": "4.0.0",
        "wait-on": "6.0.1"
    },
    "nodemonConfig": {
        "watch": "server",
        "ext": "ts",
        "exec": "esbuild ./server --platform=node --target=node16 --bundle | node"
    }
}
